import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.text.Text;
import javafx.scene.layout.FlowPane;
import javafx.scene.text.*;
import javafx.scene.text.Font;
import javafx.scene.text.FontWeight;
import javafx.stage.Stage;
import java.util.ArrayList;

public class Role extends Application{

//initializing attributes
private Text roleStatement;
private FlowPane pane;
String role="Doctor";//defualt - import from class
String user= "Sasha";

@Override
   public void start(Stage primaryStage){
   roleStatement = new Text(user + " you are a " + role + " this game!");
   Font font1 = Font.font("Arial", FontWeight.BOLD,20);
   roleStatement.setFont(font1);
   
   pane = new FlowPane();
   pane.setAlignment(Pos.CENTER);
   pane.setHgap(30);
   pane.setStyle("-fx-background-color:WHITE");
   pane.getChildren().addAll(roleStatement);
   roleStatement.setVisible(true);
   
   Scene scene = new Scene(pane, 800, 300);
      
      primaryStage.setTitle("Role Placement");
      primaryStage.setScene(scene);
      primaryStage.show();
      
   }
   
   public static void main(String[] args){
      Application.launch(args);
    
      
   }
}
